<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- barang.datang form view -->
    <record id="barang_datang_view_form_wizzard" model="ir.ui.view">
        <field name="name">barang_datang_view_form_wizzard</field>
        <field name="model">barang.datang</field>
        <field name="arch" type="xml">
            <form string="Barang Datang">
                <group>
                       <field name="barang_id"/>
                       <field name="jumlah"/>                        
                </group>
                <footer>
                    <button name="barang_datang"
                            string="Create"
                            type="object"
                            default_focus="0"
                            class="btn_primary"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- barang.datang action window -->
    <record id="barang_datang_action_wizzard" model="ir.actions.act_window">
        <field name="name">barang_datang_action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">barang.datang</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="barang_datang_view_form_wizzard"/>
        <field name="target">new</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="barang_datang_menu_wizzard"
              name="Barang Datang"
              parent="koboymart_menu_root"
              action="barang_datang_action_wizzard"
              sequence="49"/>
    
</odoo>